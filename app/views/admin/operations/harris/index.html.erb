<turbo-frame id="harris-operations">
  <dl
    data-controller='harris'
    data-harris-gender-value='<%= @patient.gender %>'
    data-harris-weight-value='<%= @patient.weight %>'
    data-harris-height-value='<%= @patient.height %>'
    data-harris-age-value='<%= @patient.age %>'
    data-harris-physical-activity-value='<%= @patient.physical_activity_factor %>'
  >
    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-2 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-500">
          GER
      </dt>
      <dd 
          data-harris-target="ger"
          class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1"
      >
          --
      </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-2 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-500">
          ETA
      </dt>
      <dd 
          data-harris-target="eta"
          class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1"
      >
          --
      </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-2 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-500">
          Actividad física
      </dt>
      <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
          <%= @patient.physical_activity_factor %>
      </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-2 sm:gap-4 sm:px-6">
      <dt class="text-sm font-bold text-gray-900">
          Calorías totales
      </dt>
      <dd 
        data-harris-target="result"
        class="mt-1 text-sm font-bold text-gray-900 sm:mt-0 sm:col-span-1">
          --
      </dd>
    </div>      
  </dl>
</turbo-frame>