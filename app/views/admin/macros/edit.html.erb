<turbo-frame id="macros">
  <div class="mt-12 flex justify-between items-center px-16 ">
    <h1 class="text-3xl font-bold text-gray-700">02. Ingresa macronutrimentos</h1>
    <p class="text-gray-400 text-md font-medium">Calorías del plan: <%= @patient.plan.calories %>
    </p>
  </div>

  <hr class="mx-16 mt-4">
  <!-- 3 columnas de macronutrimentos -->
  <div 
		class="grid md:grid-cols-3"
		data-controller="macronutriments-validator"
		data-action="macronutrimentsValidator@window->macronutriments-validator#validate"
	>
    <div class="mt-8 px-8 col-span-1" 
			data-controller="macronutriments"
			data-macronutriments-calories-value="<%= @patient.plan.calories %>"
      data-macronutriments-percentage-value="<%= @macronutriment.carbohydrates[:percentage] %>"
      data-macronutriments-type-value="carbohydrates"
      data-macronutriments-url-value="<%= admin_patient_macro_path(patient_id: @patient.id, id: @macronutriment.id) %>"
      data-macronutriments-divider-value="4" data-macronutriments-weight-value="<%= @patient.weight %>">
			<div data-macronutriments-validator-target="modal">
				<%= render 'common/modals/macronutriments_percentage' %>
			</div>
      <div data-macronutriments-target="modalPercentage">
        <%= render 'common/modals/macronutriment_percentage' %>
      </div>
      <label class="group flex items-center justify-center px-4 py-4 hover:bg-gray-50 sm:px-6">
        <span class="flex items-center truncate space-x-3">
          <span class="w-11 h-11 flex-shrink-0 rounded-lg bg-purple-600 text-white text-lg font-semibold pt-2 pl-4"
            aria-hidden="true">C</span>
          <span
            class="font-semibold truncate text-lg leading-6 bg-white text-gray-600 rounded-full py-2 px-4">Carbohidratos</span>
        </span>
      </label>
      <div class="mt-4 px-6">
        <div>
          <div class="mt-1 relative rounded-md shadow-sm">
            <input 
							data-macronutriments-target='percentage' 
							data-macronutriments-validator-target='percentage'
							type="number" 
							min="1" 
							max="100" 
							name="kcal" 
							id="kcal"
              class="focus:ring-indigo-500 focus:border-indigo-500 block w-full h-14 pl-4 pr-12 sm:text-xl border-gray-300 rounded-md"
              placeholder="Ingresa porcentaje" 
							aria-describedby="price-currency"
						>
            <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
              <span class="text-gray-400 sm:text-lg" id="price-currency">
                %
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-4 px-6">
        <div>
          <div class="mt-1 relative rounded-md shadow-sm">
            <input 
							data-macronutriments-target='grams'
							type="number"
							min="1"
							name="grams"
							id="grams"
              class="focus:ring-indigo-500 focus:border-indigo-500 block w-full h-14 pl-4 pr-12 sm:text-xl border-gray-300 rounded-md"
              placeholder="Ingresa gramos" aria-describedby="price-currency">
            <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
              <span class="text-gray-400 sm:text-lg" id="price-currency">
                gr
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-4 px-6">
        <div>
          <div class="mt-1 relative rounded-md">
            <h2
              class=" bg-gray-100 block w-full h-14 pl-4 flex items-center pr-12 sm:text-xl sm:text-gray-400 border-gray-300 rounded-md">
              <span data-macronutriments-target='kcal'>00</span>
              <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                <span class="text-gray-400 sm:text-lg" id="price-currency">
                  Kcal
                </span>
              </div>
            </h2>
          </div>
        </div>
      </div>
      <hr class="mt-8 px-6">
      <h2 class="text-lg font-medium text-gray-400 mt-6 px-6 flex justify-center tracking-wider truncate">
        <span data-macronutriments-target='extraGrams'>200</span>
        <span>gr / &nbsp</span>
        <span data-macronutriments-target='extraWeight'>80</span>
        <span>kg = &nbsp </span>
        <span data-macronutriments-target='extraResult' class="font-extrabold text-indigo-500 text-xl">2.5 </span>
        <span class="text-indigo-500">&nbsp gr/kg</span>
      </h2>
    </div>

    <div class="mt-12 px-8 md:mt-8 col-span-1" data-controller="macronutriments"
      data-macronutriments-calories-value="<%= @patient.plan.calories %>"
      data-macronutriments-percentage-value="<%= @macronutriment.protein[:percentage] %>"
      data-macronutriments-type-value="protein"
