<turbo-frame id="patient-recipes">
  <div class="mt-12 flex justify-between items-center px-16 ">
    <h1 class="text-3xl font-bold text-gray-700">05. Selecciona recetas</h1>
  </div>

  <div class="mt-6 px-16">
    <div class="sm:hidden">
    <label for="tabs" class="sr-only">Select a tab</label>
    <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
    <select id="tabs" name="tabs" class="block w-full focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md">
        <option selected>Desayuno</option>

        <option>1era colación</option>

        <option>Comida</option>

        <option>2da colación</option>

        <option>Cena</option>
    </select>
    </div>
    <div class="hidden sm:block">
    <nav class="flex space-x-4" aria-label="Tabs">
        <!-- Current: "bg-indigo-100 text-indigo-700", Default: "text-gray-500 hover:text-gray-700" -->
        <a  class="bg-indigo-100 text-indigo-700 px-3 py-2 font-semibold text-md rounded-md" aria-current="page">
          Desayuno
          <span class="bg-indigo-200 text-indigo-700 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-bold md:inline-block">4</span>
        </a>

        <a  class="text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-md rounded-md">
          1era colación
          <span class="bg-gray-200 text-gray-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-semibold md:inline-block">9</span>
        </a>

        <a  class="text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-md rounded-md">
          Comida
        </a>

        <a  class="text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-md rounded-md">
          2da colación
        </a>

        <a  class="text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-md rounded-md">
          Cena
        </a>
    </nav>
    </div>
  </div>
  <hr class="ml-16 mt-4">

  <!-- Main content -->
  <div class="flex-1 flex items-stretch overflow-hidden">
    <main class="flex-1 overflow-y-auto">
      <div class="pt-2 max-w-7xl mx-auto px-4 sm:px-16">
        <div class="bg-gray-100 divide-x-2 divide-gray-300 px-2 py-0.5 mt-0.5 flex overflow-x-auto"> <!-- Group allocation -->
          <% @patient.plan.group_portion_time.attributes.except('id', 'plan_id' , 'created_at' , 'updated_at' ).each do
            |attribute, value| %>
            <% if value[:quantity] > 0 %>
              <div class="ml-3 flex-shrink-0">
                <label class="text-gray-500 font-semibold text-xs ml-3">
                  <%= t(attribute) %>
                  <span class="bg-white text-gray-500 hidden ml-2 py-0.5 px-1.5 border border-gray-300 rounded-full text-xs font-semibold md:inline-block">
                    <%= value[:quantity] %>
                  </span>
                </label>
              </div>
            <% end %>
          <% end %>
        </div>
        <!-- Gallery -->
        <section class="mt-6 pb-16 mb-20" aria-labelledby="gallery-heading">
          <h2 id="gallery-heading" class="sr-only">Recently viewed</h2>
          <ul role="list" class="grid grid-cols-1 gap-x-4 gap-y-5 sm:grid-cols-1 sm:gap-x-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
            
            <% @recipes.each do |recipe| %>
              <li 
                class="relative" 
                data-controller='recipe'
								data-recipe-name-value="<%= recipe.name %>"
                data-recipe-image-value="<%= recipe.image %>"
                data-recipe-ingredients-value="<%= recipe.ingredients %>"
                data-recipe-accompaniment-value="<%= recipe.accompaniment %>"
                data-recipe-preparation-value="<%= recipe.steps %>"
                data-action="click->recipe#showResume"
              >
                <!-- Current: "ring-2 ring-offset-2 ring-indigo-500", Default: "focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 focus-within:ring-indigo-500" -->
                <div class="focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 focus-within:ring-indigo-500 group block w-full h-32 object object-cover rounded-lg bg-gray-100 overflow-hidden">
                  <!-- Current: "", Default: "group-hover:opacity-75" -->
                  <%= image_tag(recipe.image, class: 'object-cover cursor-pointer group-hover:opacity-75') %>
                  <button type="button" class="absolute inset-0 focus:outline-none">
                    <span class="sr-only">View recipe details</span>
                  </button>
                </div>
                <p class="mt-2 block text-sm font-medium text-gray-800 truncate pointer-events-none">
                  <%= recipe.name %>
                </p>
                <a href="#">
                  <span class="inline-flex items-center mt-1 px-1.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Seleccionar
                  </span>
                </a>
              </li>
            <% end  %>
          </ul>
        </section>
      </div>
    </main>

    <!-- Details sidebar / hidden en aside para esconderlo en mobile-->
    <aside 
      class=" w-96 bg-white p-8 border-l border-gray-200 overflow-y-auto lg:block"
      data-controller="recipe-resume"
      data-action="recipeResume@window->recipe-resume#updateResume"
    >
      <div class="pb-16 space-y-6">
        <div>
          <div class="block w-full h-52 rounded-lg overflow-hidden">
            <img data-recipe-resume-target="image" src="#" alt="" class="object-cover">
          </div>
          <div class="mt-4 flex items-start justify-between">
            <div>
              <h2 
                class="text-lg font-semibold text-gray-700"
                data-recipe-resume-target="name"
              >
                <span class="sr-only">Details for </span>
                Ommelette con queso y verduras
              </h2>
            </div>
            <!-- Botón check inactivo en estado default - icon: outline/check -->
            <button type="button" class="flex-shrink-0 ml-4 bg-white rounded-full h-8 w-8 flex items-center justify-center text-gray-400 bg-gray-100 hover:bg-gray-200 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="sr-only">Select</span>
            </button>
            
            <!-- Botón check en estado activo - icon: solid/check-circle-->
            <!-- <button type="button" class="flex-shrink-0 ml-4 bg-white rounded-full h-8 w-8 flex items-center justify-center text-green-400 bg-green-100 hover:bg-green-200 hover:text-green-600 focus:outline-none focus:ring-2 focus:ring-green-500"> 
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="sr-only">Select</span>
            </button> -->

            <button type="button" class="ml-1.5 flex-shrink-0 bg-white rounded-full h-8 w-8 flex items-center justify-center text-gray-400 bg-gray-100 hover:bg-gray-100 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <!-- Heroicon name: solid/pencil -->
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
              <span class="sr-only">Edit</span>
            </button>
          </div>
        </div>
        
        <div>
          <h3 class="font-medium text-gray-900">Ingredientes</h3>
          <dl 
            class="mt-2 border-t border-b border-gray-200 divide-y divide-gray-200"
            data-recipe-resume-target="ingredients"
          >
          </dl>
        </div>

        <div>
          <h3 class="font-medium text-gray-900">Acompañamiento</h3>
          <dl 
            class="mt-2 border-t border-b border-gray-200 divide-y divide-gray-200"
            data-recipe-resume-target="accompaniment"
          >
            
          </dl>
        </div>

        <div>
          <h3 class="font-medium text-gray-900">Preparación</h3>
          <dl 
            class="mt-2 border-t border-b border-gray-200 divide-y divide-gray-200"
            data-recipe-resume-target="preparation"
          >
          

          </dl>
        </div>

      </div>
    </aside>
  </div>    
</turbo-frame>